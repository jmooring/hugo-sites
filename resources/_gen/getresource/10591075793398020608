<script>
window.addEventListener('DOMContentLoaded', function() {
  let list = document.getElementById("eventlist");
  if (list) {
    let cnt = 0;
    list.querySelectorAll("div").forEach(item => {
      let datetime = item.getAttribute("data-expirydate")*1000 - 3600000;
      let now = Date.now();
      if (datetime < now) {
        item.style.display = 'none';
      } else {
        cnt++;
      }
    });
    if (cnt == 0) {
      list.innerHTML = '<div><h3 class="uk-text-center">Keine aktuellen Termine!</h3></div>';
    }
  }
});
</script> 

