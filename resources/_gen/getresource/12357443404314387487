<div id="bg" class="backdrop-opacity-80 h-full pb-[32px] mx-auto left-0 right-0 z-40 translate-y-[200%] transform-gpu duration-700 fixed bottom-0">
  <div id="offers" class="bg-gray-200 pb-[32px] absolute bottom-0 left-0 right-0 overflow-y-scroll max-w-screen-lg lg:mx-auto flex flex-col gap-2"></div>
</div>

<div id="titleScrollBtn" class="select-none z-40 mx-auto max-w-[300px] bg-gray-200 fixed bottom-0 left-0 right-0 translate-y-[200%] transition-all duration-700 whitespace-nowrap text-center w-full h-max hover:cursor-pointer">
  <h5 class="uppercase text-lg font-semibold leading-none h-[32px] flex justify-center items-center">
    </i><span id="typed"></span><i class="text-blue-gray-800 px-4 fa-solid fa-arrows-up-down"></i>
  </h5>
