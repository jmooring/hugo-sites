    "apiVersion": "admission.k8s.io/v1beta1",
    "kind": "AdmissionReview",
    "request": {
        "kind": {
            "group": "extensions",
            "kind": "Ingress",
            "version": "v1beta1"
        },
        "object": {
            "metadata": {
                "name": "prod",
                "namespace": "bar"
            },
            "spec": {
                "rules": [
                    {
                        "host": "initech.com",
                        "http": {
                            "paths": [
                                {
                                    "backend": {
                                        "serviceName": "banking",
                                        "servicePort": 443
                                    },
                                    "path": "/finance"
                                }
                            ]
                        }
