  <header>
    <h2 class="section-heading half-block screen-reader">Work at Bath</h2>
  </header>
  <div class="section-wrapper">
    <div class="flex-row-reverse flex-column-sm">
      <!-- Image -->
      <div class="half-block hide-for-small-only">
