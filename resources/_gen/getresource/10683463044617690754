<script>
    function setSelected(clicked_el) {
        var els = document.querySelectorAll('#harbour .bullet');
        els.forEach( function(el) {
            el.classList.remove('selected');
        });
        clicked_el.classList.add('selected');
        document.querySelector('#harbour .infobox h3').innerHTML = clicked_el.dataset.title;
        document.querySelector('#harbour .infobox div').innerHTML = clicked_el.dataset.description;
    }
</script>




