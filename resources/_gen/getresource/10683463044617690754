<script>
  var elements = document.querySelectorAll('.section.header ul.menu li a');
  elements.forEach(function(el) {
    el.addEventListener('click', function(event) {
      if(!this.parentElement.classList.contains('active') && this.parentElement.querySelectorAll('ul li').length) {
        var lis = document.querySelectorAll('.section.header ul.menu li');
        lis.forEach(function(li) {
          li.classList.remove('active');
        });

        this.parentElement.classList.add('active');
        event.preventDefault();
        event.stopPropagation();
      } else {
        document.body.classList.remove('menuopen');
      }
    });
  });
</script>
  



















<div class="section fixedbg bgimage video" style="">
    <div class="playbutton"></div>
    <div class="video-container" style="background: url(/uploads/video_still.jpg) center center / cover no-repeat;">
        <div class="vimeoplayer" vimeoid="727917741"></div>
        <script src="https://player.vimeo.com/api/player.js"></script>
        <script>
            var player = new Array();
            var video_el = document.querySelector('[vimeoid="727917741"]');
            var vimeoid = video_el.getAttribute('vimeoid');
            function createplayer(video_el,vimeoid) {
                if(!player[vimeoid]) {
                    
                    var options = {
                        id: vimeoid,
                        controls: false,
                        muted: true,
                        loop: true
                    };
                    player[vimeoid] = new Vimeo.Player(video_el,options);
                    player[vimeoid].on('loaded', function(data) {
                        video_el.parentElement.parentElement.classList.add('loaded');
                        video_el.parentElement.parentElement.querySelector('.playbutton').click();
                    });
                    player[vimeoid].on('ended', function(data) {
                        
                        player[vimeoid].unload();
                        video_el.parentElement.parentElement.classList.remove('playing');
                    });
                }
            }
            createplayer(video_el,vimeoid);

             
            var elements = document.querySelectorAll('.video');
            Array.prototype.forEach.call(elements, function(el, i){
                var vimeoid = el.querySelector('.vimeoplayer').getAttribute('vimeoid');
                el.querySelector('.playbutton').addEventListener("mouseup", function() {
                    player[vimeoid].setVolume(1);
                });
                el.querySelector('.playbutton').addEventListener("click", function() {
                    if(el.classList.contains('playing')) {
                        player[vimeoid].pause();
                        el.classList.remove('playing');
                        el.classList.add('paused');
                    } else {

                        if(player[vimeoid] && el.classList.contains('loaded')) {
                            el.classList.remove('waiting');
                            el.classList.add('loading');
                            player[vimeoid].play().then(function() {
                                
                                el.classList.remove('loading');
                                el.classList.remove('paused');
                                el.classList.add('playing');
                                el.querySelector('iframe').focus();
                            }).catch(function(error) {
                                console.log(error.name);
                            });
                        } else {
                            el.classList.add('waiting');
                            setTimeout(function(){
                                el.querySelector('.playbutton').click();
                            }, 100);
                        }
                    }
                    
                });
            });
        </script>

